<Window x:Class="KeepIT.SaveLocationMsgWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeepIT"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        Height="160"
        Width="320"
        MaxHeight="160"
        MaxWidth="320"
        MinHeight="160"
        MinWidth="320">

    <Window.Resources>
        <Style x:Key="DialogButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#040E80"/>
            <Setter Property="BorderBrush" Value="#040E80"/>
            <Setter Property="Foreground" Value="WhiteSmoke"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontFamily" Value="JetBrains Mono"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                CornerRadius="14"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#0814C2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#0814C2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Border Background="#1E1E1E"
                BorderBrush="#3A3A3A"
                BorderThickness="2"
                CornerRadius="25"
                Padding="10">

            <Border Background="#FF242527"
                    CornerRadius="25"
                    Padding="16">

                <StackPanel>
                    <TextBlock x:Name="txtTitle"
                       Text="Spremljeno"
                       Foreground="WhiteSmoke"
                       FontFamily="JetBrains Mono"
                       FontWeight="Bold"
                       FontSize="14"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,8"/>

                    <TextBlock x:Name="txtMessage"
                       Text="Spremljeno je na: ..."
                       Foreground="WhiteSmoke"
                       FontFamily="JetBrains Mono"
                       FontSize="11"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="btnOk"
                            Content="OK"
                            Width="140"
                            Margin="0,10,0,0"
                            Style="{StaticResource DialogButtonStyle}"
                            Click="btn_OK_Click"/>
                    </StackPanel>
                </StackPanel>

            </Border>
        </Border>
    </Grid>
</Window>
