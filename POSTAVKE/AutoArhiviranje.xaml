<Window x:Class="KeepIT.AutoArhiviranje"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeepIT"
        mc:Ignorable="d"
        Height="700"
        Width="900"
        MaxHeight="700"
        MaxWidth="900"
        MinHeight="700"
        MinWidth="900"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        Opacity="1">

    <Window.Resources>

        <SolidColorBrush x:Key="BgOuter" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="BgInner" Color="#242527"/>
        <SolidColorBrush x:Key="CardBg"  Color="#202124"/>
        <SolidColorBrush x:Key="InputBg" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="Border"  Color="#3A3A3A"/>

        <SolidColorBrush x:Key="Text"  Color="#F5F5F5"/>
        <SolidColorBrush x:Key="Muted" Color="#B9B9B9"/>

        <SolidColorBrush x:Key="Blue"        Color="#040E80"/>
        <SolidColorBrush x:Key="BlueHover"   Color="#0814C2"/>
        <SolidColorBrush x:Key="BluePressed" Color="#0A18E0"/>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource Text}"/>
            <Setter Property="FontFamily" Value="JetBrains Mono"/>
        </Style>

        <Style TargetType="{x:Type DatePickerTextBox}">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
        </Style>

        <Style x:Key="BtnBlue" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource Blue}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Blue}"/>
            <Setter Property="Foreground" Value="{StaticResource Text}"/>
            <Setter Property="FontFamily" Value="JetBrains Mono"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="52"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="b"
                                CornerRadius="16"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                Padding="14,0">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="b" Property="Background" Value="{StaticResource BlueHover}"/>
                                <Setter TargetName="b" Property="BorderBrush" Value="{StaticResource BlueHover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="b" Property="Background" Value="{StaticResource BluePressed}"/>
                                <Setter TargetName="b" Property="BorderBrush" Value="{StaticResource BluePressed}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="b" Property="Opacity" Value="0.45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BtnTop" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource InputBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Border}"/>
            <Setter Property="Foreground" Value="{StaticResource Text}"/>
            <Setter Property="FontFamily" Value="JetBrains Mono"/>
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="28"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource InputBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Border}"/>
            <Setter Property="Foreground" Value="{StaticResource Text}"/>
            <Setter Property="FontFamily" Value="JetBrains Mono"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="{StaticResource Text}"/>
            <Setter Property="FontFamily" Value="JetBrains Mono"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,0,18,0"/>
        </Style>

        <Style TargetType="DatePicker">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="BorderBrush" Value="{StaticResource Border}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="JetBrains Mono"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Width" Value="220"/>
        </Style>

        <Style x:Key="DarkComboBoxItem" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,6"/>
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="{StaticResource BlueHover}"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource BlueHover}"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="JetBrains Mono"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="ItemContainerStyle" Value="{StaticResource DarkComboBoxItem}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="MainBorder"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="6"
                                    Padding="{TemplateBinding Padding}"
                                    TextElement.Foreground="{TemplateBinding Foreground}">
                                <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition Width="26"/>
                                            </Grid.ColumnDefinitions>

                                    <ContentPresenter
                                        VerticalAlignment="Center"
                                        Content="{TemplateBinding SelectionBoxItem}"
                                        ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                        RecognizesAccessKey="True"/>

                                    <ToggleButton Grid.Column="1"
                                                  Focusable="False"
                                                  IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                  Background="Transparent"
                                                  BorderThickness="0">
                                                <Path Data="M 0 0 L 4 4 L 8 0 Z"
                                                      Fill="{TemplateBinding Foreground}"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                            </ToggleButton>
                                </Grid>
                            </Border>

                            <Popup x:Name="PART_Popup"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   Placement="Bottom"
                                   PlacementTarget="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Fade">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="6"
                                        TextElement.Foreground="{TemplateBinding Foreground}"
                                        MinWidth="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                    <ScrollViewer CanContentScroll="True"
                                                  Background="{TemplateBinding Background}">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="MainBorder" Property="Opacity" Value="0.45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid>
                    <Border Background="{StaticResource BgOuter}"
                            BorderBrush="{StaticResource Border}"
                            BorderThickness="2"
                            CornerRadius="25"
                            Padding="20">

            <Border Background="{StaticResource BgInner}"
                    CornerRadius="25"
                    Padding="20">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Height="40">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="btn_Minimize"
                                Grid.Column="1"
                                Content="—"
                                Margin="0,0,8,0"
                                Style="{StaticResource BtnTop}"
                                Click="btn_Minimize_Click"/>

                        <Button x:Name="btn_Back"
                                        Grid.Column="2"
                                        Content="Back"
                                        Style="{StaticResource BtnTop}"
                                         Click="btn_Back_Click"/>
                    </Grid>

                    <StackPanel Grid.Row="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                Margin="0,20,0,0"
                                Width="560">

                        <TextBlock Text="Automatsko arhiviranje"
                                   HorizontalAlignment="Center"
                                   FontSize="40"
                                   FontWeight="Bold"
                                   Margin="0,10,0,8"/>

                        <TextBlock Text="Odaberi gdje arhivirati i koliko često."
                                   HorizontalAlignment="Center"
                                   FontSize="12"
                                   Foreground="{StaticResource Muted}"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,20"/>

                        <Border Background="{StaticResource CardBg}"
                                BorderBrush="{StaticResource Border}"
                                BorderThickness="1"
                                  CornerRadius="18"
                                 Padding="16"
                                 Margin="0,0,0,12">

                            <StackPanel>
                                <TextBlock Text="Tip arhiviranja"
                                           FontWeight="Bold"
                                           FontSize="12"
                                           Margin="0,0,0,10"/>

                                <StackPanel Orientation="Horizontal">
                                    <RadioButton x:Name="rbLocal"
                                                 Content="Lokalno"
                                                 GroupName="ArchiveTarget"
                                                 IsChecked="True"/>
                                    <RadioButton x:Name="rbServer"
                                                 Content="Server / Cloud"
                                                 GroupName="ArchiveTarget"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <Border Background="{StaticResource CardBg}"
                                BorderBrush="{StaticResource Border}"
                                BorderThickness="1"
                                CornerRadius="18"
                                Padding="16"
                                Margin="0,0,0,12">

                            <StackPanel>
                                <TextBlock Text="Period"
                                                       FontWeight="Bold"
                                                       FontSize="12"
                                                       Margin="0,0,0,10"/>

                                <ComboBox x:Name="cbPeriod"
                                          Style="{StaticResource DarkComboBox}"
                                          SelectedIndex="0">
                                    <ComboBoxItem Content="Svaki tjedan"/>
                                    <ComboBoxItem Content="Svaki mjesec"/>
                                    <ComboBoxItem Content="Svake godine"/>
                                </ComboBox>
                            </StackPanel>
                        </Border>

                        <Border Background="{StaticResource CardBg}"
                                BorderBrush="{StaticResource Border}"
                                BorderThickness="1"
                                CornerRadius="18"
                                Padding="16"
                                Margin="0,0,0,18">

                            <StackPanel>
                                <TextBlock Text="Početak (opcionalno)"
                                           FontWeight="Bold"
                                           FontSize="12"
                                           Margin="0,0,0,10"/>

                                <TextBlock Text="Odaberi datum od kojeg kreće automatsko arhiviranje."
                                           Foreground="{StaticResource Muted}"
                                           FontSize="10"
                                           Margin="0,0,0,10"
                                           TextWrapping="Wrap"/>

                                <DatePicker x:Name="dpStartDate"
                                            Width="240"
                                            Height="50"
                                            />
                            </StackPanel>
                        </Border>

                        <Button x:Name="PostaviArhiviranje"
                                Content="Postavi"
                                Width="360"
                                FontSize="18"
                                Style="{StaticResource BtnBlue}"
                                Click="btn_PostaviArhiviranje_Click"
                                Margin="0,0,0,10"/>

                        <Button x:Name="UkloniArhiviranje"
                                Content="Ukloni auto arhivu"
                                Width="360"
                                FontSize="18"
                                Style="{StaticResource BtnBlue}"
                                Margin="0,0,0,10"
                                Click="btn_UkloniArhiviranje_Click"/>
                    </StackPanel>
                </Grid>

            </Border>
        </Border>
    </Grid>
</Window>
