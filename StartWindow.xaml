<Window x:Class="KeepIT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeepIT"
        mc:Ignorable="d"
        Height="650"
        Width="900"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        Opacity="1">

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                     From="0"
                                     To="1"
                                     Duration="0:0:0.95" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Grid>
        <Border Background="#1E1E1E"
                BorderBrush="#3A3A3A"
                BorderThickness="2"
                CornerRadius="25"
                Padding="20">

            <Border CornerRadius="25"
                    SnapsToDevicePixels="True"
                    Padding="15"
                    Background="#FF242527">
            </Border>
        </Border>
        <Grid>
            <TextBlock Text="KeepIT"
                   FontSize="72"
                   Foreground="WhiteSmoke" 
                   VerticalAlignment="Top"
                   HorizontalAlignment="Center" Margin="0,221,0,0"
                   FontStyle="Normal"
                   FontFamily="JetBrains Mono"/>
            <TextBlock Text="Secure archives made simple."
                   FontSize="24"
                   Foreground="LightGray" 
                   VerticalAlignment="Top"
                   HorizontalAlignment="Center" Margin="0,325,0,0"
                   FontStyle="Normal"
                   FontFamily="JetBrains Mono"/>

            <Image Source="D:\PROJEKT VUB\SLIKE\ICON.png"
                    Width="104"
                    Height="113"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Center"
                    Margin="0,418,0,0"/>
        </Grid>
    </Grid>
</Window>
