<Window x:Class="KeepIT.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeepIT"
        mc:Ignorable="d"
        Height="650"
        Width="900"
        MaxHeight="650"
        MaxWidth="900"
        MinHeight="650"
        MinWidth="900"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        Opacity="1">

    <Window.Resources>
        <Style TargetType="ToolTip">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="WhiteSmoke"/>
            <Setter Property="BorderBrush" Value="#3A3A3A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="JetBrains Mono"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Border Background="#1E1E1E"
                BorderBrush="#3A3A3A"
                BorderThickness="2"
                CornerRadius="25"
                Padding="20">

            <Border Background="#FF242527"
                    CornerRadius="25"
                    Padding="20">


                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Height="40">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="btn_Minimize"
                                Grid.Column="1"
                                Content="—"
                                Width="36"
                                Height="28"
                                Margin="0,0,8,0"
                                Background="#2A2A2A"
                                BorderBrush="#3A3A3A"
                                Foreground="WhiteSmoke"
                                FontFamily="JetBrains Mono"
                                Click="btn_Minimize_Click"/>

                        <Button x:Name="btn_Close"
                                Grid.Column="2"
                                Content="X"
                                Width="36"
                                Height="28"
                                Background="#2A2A2A"
                                BorderBrush="#3A3A3A"
                                Foreground="WhiteSmoke"
                                FontFamily="JetBrains Mono"
                                Click="btn_Close_Click"/>
                    </Grid>

                    <StackPanel Grid.Row="1"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Top">

                        <TextBlock Text="MAIN MENU"
                                   HorizontalAlignment="Center"
                                   FontSize="56"
                                   FontWeight="Bold"
                                   Foreground="WhiteSmoke"
                                   FontFamily="JetBrains Mono"/>

                        <TextBlock x:Name="txtWelcome"
                                   Margin="0,10,0,15"
                                   FontSize="22"
                                   Foreground="LightGray"
                                   FontFamily="JetBrains Mono"
                                   HorizontalAlignment="Center"/>
                        
                        <local:DateTimeWidget 
                            Width="94"
                            Margin="0,10,0,0"
                            HorizontalAlignment="Center"/>


                        <Button x:Name="btn_LOCAL"
                                Content="ARHIVIRAJ LOKANO"
                                Width="250"
                                Height="50"
                                Background="#040E80"
                                BorderBrush="#040E80"
                                Foreground="WhiteSmoke"
                                FontWeight="Bold"
                                Margin="0,30,0,20"
                                FontSize="18"
                                HorizontalAlignment="Center"
                                FontFamily="JetBrains Mono"
                                Click="btn_LOCAL_Click"
                                ToolTip="Arhivira podatke lokalno na ovom računalu.">

                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border x:Name="border"
                                            CornerRadius="20"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="1">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border"
                                                    Property="Background"
                                                    Value="#0814C2"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="border"
                                                    Property="Background"
                                                    Value="#0814C2"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button x:Name="btn_SERVER"
                                Content="ARHIVIRAJ SERVER"
                                Width="250"
                                Height="50"
                                Background="#040E80"
                                BorderBrush="#040E80"
                                Foreground="WhiteSmoke"
                                Margin="0,20,0,20"
                                FontWeight="Bold"
                                HorizontalAlignment="Center"
                                FontSize="18"
                                FontFamily="JetBrains Mono"
                                Click="btn_SERVER_Click"
                                ToolTip="Arhivira podatke na server za centralan i sigurniji pristup.">

                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border x:Name="border"
                                            CornerRadius="20"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="1">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border"
                                                    Property="Background"
                                                    Value="#0814C2"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="border"
                                                    Property="Background"
                                                    Value="#0814C2"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button x:Name="btn_POSTAVKE"
                                Content="POSTAVKE"
                                Width="250"
                                Height="50"
                                Background="#040E80"
                                Margin="0,20,0,80"
                                BorderBrush="#040E80"
                                HorizontalAlignment="Center"
                                Foreground="WhiteSmoke"
                                FontWeight="Bold"
                                FontSize="18"
                                FontFamily="JetBrains Mono"
                                Click="btn_POSTAVKE_Click">

                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border x:Name="border"
                                            CornerRadius="20"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="1">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border"
                                                    Property="Background"
                                                    Value="#0814C2"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="border"
                                                    Property="Background"
                                                    Value="#0814C2"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>
    </Grid>
</Window>
