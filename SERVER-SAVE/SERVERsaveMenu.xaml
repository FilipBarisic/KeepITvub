<Window x:Class="KeepIT.SERVERsaveMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeepIT"
        mc:Ignorable="d"
        Height="950"
        MaxHeight="950"
        MinHeight="950"
        Width="2000"
        MaxWidth="2000"
        MinWidth="2000"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        Opacity="1">

    <Window.Resources>
        <Style x:Key="DialogButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#040E80"/>
            <Setter Property="BorderBrush" Value="#040E80"/>
            <Setter Property="Foreground" Value="WhiteSmoke"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontFamily" Value="JetBrains Mono"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                CornerRadius="14"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#0814C2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#0814C2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Border Background="#1E1E1E"
                BorderBrush="#3A3A3A"
                BorderThickness="2"
                CornerRadius="25"
                Padding="20">

            <Border Background="#FF242527"
                    CornerRadius="25"
                    Padding="20">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Height="50">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <local:DateTimeWidget
                            Grid.Column="0"
                            Width="160"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Margin="8,0,0,0"/>

                        <Button x:Name="btn_Minimize"
                                Grid.Column="1"
                                Content="—"
                                Width="36"
                                Height="28"
                                Margin="0,0,8,0"
                                Background="#2A2A2A"
                                BorderBrush="#3A3A3A"
                                Foreground="WhiteSmoke"
                                FontFamily="JetBrains Mono"
                                Click="btn_Minimize_Click"/>

                        <Button x:Name="btn_Back"
                                Grid.Column="2"
                                Content="Nazad"
                                Width="60"
                                Height="28"
                                Background="#2A2A2A"
                                BorderBrush="#3A3A3A"
                                Foreground="WhiteSmoke"
                                FontFamily="JetBrains Mono"
                                Click="btn_Back_Click"/>
                    </Grid>

                    <Border x:Name="borderServerPicker"
                            Grid.Row="1"
                            Background="#262729"
                            BorderBrush="#3A3A3A"
                            BorderThickness="1"
                            CornerRadius="15"
                            Margin="0,10,0,10"
                            Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="260"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" 
                                    Background="#1E1E1E" 
                                    CornerRadius="4" 
                                    BorderBrush="#3A3A3A" 
                                    BorderThickness="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0"
                                               Text="Folderi"
                                               FontFamily="JetBrains Mono"
                                               FontWeight="Bold"
                                               Foreground="WhiteSmoke"
                                               FontSize="14"
                                               Margin="8,6,8,4"/>

                                    <TreeView x:Name="tvFolders"
                                              Grid.Row="1"
                                              Margin="4,0,4,4"
                                              Background="Transparent"
                                              Foreground="WhiteSmoke"
                                              FontFamily="JetBrains Mono"
                                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                                              ScrollViewer.HorizontalScrollBarVisibility="Auto">

                                        <TreeView.Resources>
                                            <Style TargetType="TreeViewItem">
                                                <Setter Property="Foreground" Value="WhiteSmoke"/>
                                            </Style>
                                        </TreeView.Resources>

                                    </TreeView>


                                    <TextBlock Grid.Row="2"
                                                Text="* Prikaz dostupnih diskova i foldera na računalu."
                                                FontFamily="JetBrains Mono"
                                                FontSize="10"
                                                Foreground="Gray"
                                                Margin="8,0,8,6"
                                                TextWrapping="Wrap"/>
                                </Grid>
                            </Border>


                            <Border Grid.Column="2"
                                    Background="#1E1E1E"
                                    CornerRadius="4" Margin="0,0,768,0" Grid.ColumnSpan="3">
                                <StackPanel>
                                    <TextBlock Text="Dokumenti u folderu"
                                               FontFamily="JetBrains Mono"
                                               FontWeight="Bold"
                                               Foreground="WhiteSmoke"
                                               FontSize="14"
                                               Margin="8,6,8,4"/>
                                    <ListView x:Name="lvFiles"
                                              Margin="8,0,8,8"
                                              Background="#1E1E1E"
                                              Foreground="WhiteSmoke"
                                              FontFamily="JetBrains Mono"
                                              BorderThickness="0"
                                              HorizontalContentAlignment="Stretch"
                                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                                              Padding="4">
                                        <ListView.Resources>
                                            <Style TargetType="GridViewColumnHeader">
                                                <Setter Property="Foreground" Value="WhiteSmoke"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                                <Setter Property="FontSize" Value="12"/>
                                                <Setter Property="FontFamily" Value="JetBrains Mono"/>
                                                <Setter Property="Background" Value="#252526"/>
                                                <Setter Property="Padding" Value="6,4"/>
                                            </Style>

                                            <Style TargetType="ListViewItem">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="BorderThickness" Value="0"/>
                                                <Setter Property="Padding" Value="6,4"/>
                                                <Setter Property="Margin" Value="0,2,0,2"/>
                                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="ListViewItem">
                                                            <Border x:Name="Bd"
                                                                    Background="{TemplateBinding Background}"
                                                                    CornerRadius="6"
                                                                    SnapsToDevicePixels="true">
                                                                <GridViewRowPresenter
                                                                    Content="{TemplateBinding Content}"
                                                                    Columns="{Binding RelativeSource={RelativeSource AncestorType=ListView}, Path=View.Columns}"/>
                                                            </Border>

                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsSelected" Value="True">
                                                                    <Setter TargetName="Bd" Property="Background" Value="#0814C2"/>
                                                                </Trigger>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="Bd" Property="Background" Value="#2A2A2A"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>

                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </ListView.Resources>

                                        <ListView.View>
                                            <GridView>
                                                <GridViewColumn Header="Name"     Width="260" DisplayMemberBinding="{Binding Name}"/>
                                                <GridViewColumn Header="Type"     Width="100" DisplayMemberBinding="{Binding Type}"/>
                                                <GridViewColumn Header="Size"     Width="80"  DisplayMemberBinding="{Binding Size}"/>
                                                <GridViewColumn Header="Modified" Width="160" DisplayMemberBinding="{Binding Modified}"/>
                                            </GridView>
                                        </ListView.View>

                                        <ListView.Style>
                                            <Style TargetType="ListView">
                                                <Style.Triggers>
                                                    <Trigger Property="HasItems" Value="False">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="ListView">
                                                                    <Border Background="{TemplateBinding Background}"
                                                                            Padding="{TemplateBinding Padding}"
                                                                            CornerRadius="6">
                                                                        <TextBlock Text="Nema podataka za prikazati"
                                                                                   Foreground="Gray"
                                                                                   FontFamily="JetBrains Mono"
                                                                                   HorizontalAlignment="Center"
                                                                                   VerticalAlignment="Center"
                                                                                   Padding="20"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ListView.Style>
                                    </ListView>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="4"
                                    Background="#1E1E1E"
                                    CornerRadius="4"
                                    Margin="222,0,0,0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0"
                                               Text="Podaci za arhiviranje"
                                               FontFamily="JetBrains Mono"
                                               FontWeight="Bold"
                                               Foreground="WhiteSmoke"
                                               FontSize="14"
                                               Margin="8,6,8,4"/>

                                    <ListView x:Name="lvArchiveQueue"
                                              Grid.Row="1"
                                              Margin="8,0,8,8"
                                              Background="#1E1E1E"
                                              Foreground="WhiteSmoke"
                                              FontFamily="JetBrains Mono"
                                              BorderThickness="0"
                                              HorizontalContentAlignment="Stretch"
                                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                                              ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                              Padding="4">

                                        <ListView.Resources>
                                            <Style TargetType="GridViewColumnHeader">
                                                <Setter Property="Foreground" Value="WhiteSmoke"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                                <Setter Property="FontSize" Value="12"/>
                                                <Setter Property="FontFamily" Value="JetBrains Mono"/>
                                                <Setter Property="Background" Value="#252526"/>
                                                <Setter Property="Padding" Value="6,4"/>
                                            </Style>

                                            <Style TargetType="ListViewItem">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="BorderThickness" Value="0"/>
                                                <Setter Property="Padding" Value="6,4"/>
                                                <Setter Property="Margin" Value="0,2,0,2"/>
                                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="ListViewItem">
                                                            <Border x:Name="Bd"
                                                                    Background="{TemplateBinding Background}"
                                                                    CornerRadius="6"
                                                                    SnapsToDevicePixels="true">
                                                                <GridViewRowPresenter
                                                                    Content="{TemplateBinding Content}"
                                                                    Columns="{Binding RelativeSource={RelativeSource AncestorType=ListView}, Path=View.Columns}"/>
                                                            </Border>

                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsSelected" Value="True">
                                                                    <Setter TargetName="Bd" Property="Background" Value="#0814C2"/>
                                                                </Trigger>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="Bd" Property="Background" Value="#2A2A2A"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </ListView.Resources>

                                        <ListView.View>
                                            <GridView>
                                                <GridViewColumn Header="Name"   Width="260" DisplayMemberBinding="{Binding Name}"/>
                                                <GridViewColumn Header="Size"   Width="80"  DisplayMemberBinding="{Binding Size}"/>
                                                <GridViewColumn Header="Folder" Width="260" DisplayMemberBinding="{Binding Folder}"/>
                                            </GridView>
                                        </ListView.View>

                                        <ListView.Style>
                                            <Style TargetType="ListView">
                                                <Style.Triggers>
                                                    <Trigger Property="HasItems" Value="False">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="ListView">
                                                                    <Border Background="{TemplateBinding Background}"
                                                                            Padding="{TemplateBinding Padding}"
                                                                            CornerRadius="6">
                                                                        <TextBlock Text="Nema podataka za prikazati"
                                                                                   Foreground="Gray"
                                                                                   FontFamily="JetBrains Mono"
                                                                                   HorizontalAlignment="Center"
                                                                                   VerticalAlignment="Center"
                                                                                   Padding="20"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ListView.Style>

                                    </ListView>
                                </Grid>
                            </Border>


                        </Grid>
                    </Border>

                    <Border x:Name="borderServerPullView"
                            Grid.Row="1"
                            Background="#262729"
                            BorderBrush="#3A3A3A"
                            BorderThickness="1"
                            CornerRadius="15"
                            Margin="0,10,0,10"
                            Padding="10"
                            Visibility="Collapsed">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                    Background="#1E1E1E"
                                    CornerRadius="4"
                                    BorderBrush="#3A3A3A"
                                    BorderThickness="1"
                                    Padding="8">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="Podaci na serveru"
                                               FontFamily="JetBrains Mono"
                                               FontWeight="Bold"
                                               Foreground="WhiteSmoke"
                                               FontSize="14"
                                               Margin="0,0,0,6"/>

                                    <TreeView x:Name="tvServerData"
                                              Grid.Row="1"
                                              Background="Transparent"
                                              Foreground="WhiteSmoke"
                                              FontFamily="JetBrains Mono"
                                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                                              ScrollViewer.HorizontalScrollBarVisibility="Auto">
                                        <TreeView.Resources>
                                            <Style TargetType="TreeViewItem">
                                                <Setter Property="Foreground" Value="WhiteSmoke"/>
                                            </Style>
                                        </TreeView.Resources>
                                    </TreeView>
                                </Grid>
                            </Border>

                            <Border Grid.Column="2"
                                    Background="#1E1E1E"
                                    CornerRadius="4"
                                    BorderBrush="#3A3A3A"
                                    BorderThickness="1"
                                    Padding="8">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="Odabrano za povlačenje"
                                               FontFamily="JetBrains Mono"
                                               FontWeight="Bold"
                                               Foreground="WhiteSmoke"
                                               FontSize="14"
                                               Margin="0,0,0,6"/>

                                    <ListView x:Name="lvServerPullQueue"
                                              Grid.Row="1"
                                              Background="#1E1E1E"
                                              Foreground="WhiteSmoke"
                                              FontFamily="JetBrains Mono"
                                              BorderThickness="0"
                                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                                              Padding="4">
                                        <ListView.View>
                                            <GridView>
                                                <GridViewColumn Header="Name" Width="260" DisplayMemberBinding="{Binding Name}"/>
                                                <GridViewColumn Header="Size" Width="80"  DisplayMemberBinding="{Binding Size}"/>
                                            </GridView>
                                        </ListView.View>
                                    </ListView>
                                </Grid>
                            </Border>

                        </Grid>
                    </Border>

                    <Border Grid.Row="2"
                            Background="#2B2C2F"
                            CornerRadius="10"
                            Margin="0,0,0,0"
                            Padding="15,10">
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center">
                            <Button x:Name="btn_Save"
                                    Content="Spremi na server"
                                    Width="250"
                                    Height="40"
                                    Background="#2A2A2A"
                                    BorderBrush="#3A3A3A"
                                    Foreground="WhiteSmoke"
                                    FontFamily="JetBrains Mono" 
                                    Click="btn_Save_Click"
                                    />

                            <Button x:Name="btn_PovuciServerSave"
                                    Content="Povuci sa servera"
                                    Width="250"
                                    Height="40"
                                    Background="#2A2A2A"
                                    BorderBrush="#3A3A3A"
                                    Foreground="WhiteSmoke"
                                    FontFamily="JetBrains Mono" 
                                    Click="btn_PovuciServerSave_Click"
                                    />

                            <Button x:Name="btn_Add"
                                    Content="Dodaj"
                                    Width="100"
                                    Height="40"
                                    Margin="8,0,0,0"
                                    Background="#2A2A2A"
                                    BorderBrush="#3A3A3A"
                                    Foreground="WhiteSmoke"
                                    FontFamily="JetBrains Mono"/>

                            <Button x:Name="btn_Remove"
                                    Content="Ukloni"
                                    Width="100"
                                    Height="40"
                                    Margin="8,0,180,0"
                                    Background="#2A2A2A"
                                    BorderBrush="#3A3A3A"
                                    Foreground="WhiteSmoke"
                                    FontFamily="JetBrains Mono"/>

                            <Button x:Name="btn_ServerSave"
                                    Content="Spremi na server"
                                    Width="120"
                                    Height="40"
                                    Background="#2A2A2A"
                                    BorderBrush="#3A3A3A"
                                    Foreground="WhiteSmoke"
                                    FontFamily="JetBrains Mono"
                                    Click="btn_ServerSave_Click"/>

                            <Button x:Name="btn_ServerPull"
                                    Content="Preuzmi sa servera"
                                    Width="120"
                                    Height="40"
                                    Background="#2A2A2A"
                                    BorderBrush="#3A3A3A"
                                    Foreground="WhiteSmoke"
                                    FontFamily="JetBrains Mono"
                                    Click="btn_ServerPull_Click"/>

                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Border>
    </Grid>
</Window>
